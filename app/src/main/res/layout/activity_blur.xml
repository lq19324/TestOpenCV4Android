<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/but_blur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="blur"
        android:onClick="onButtonClick"/>

    <Button
        android:id="@+id/but_medium_blur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="medium blur"
        android:onClick="onButtonClick"/>

    <Button
        android:id="@+id/but_gaussian_blur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="gaussian blur"
        android:onClick="onButtonClick"/>

    <Button
        android:id="@+id/but_bilateral_blur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="gaussian blur"
        android:onClick="onButtonClick"/>

    <SeekBar
        android:id="@+id/seek_blur_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Hello World!"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/src_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/dst_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>
